builds:
-
  goos:
    - darwin
    - linux
    - windows
  goarch:
    - s390x
    - ppc64le
    - 386
    - amd64
  env:
    - CGO_ENABLED=0
  ignore:
    - goos: darwin
      goarch: ppc64le
    - goos: windows
      goarch: ppc64le
    - goos: darwin
      goarch: s390x
    - goos: windows
      goarch: s390x
  main: ./packr2/main.go
  binary: packr2

checksum:
  name_template: 'checksums.txt'

snapshot:
  name_template: "{{ .Tag }}-next"

changelog:
  sort: asc
  filters:
    exclude:
      - '^docs:'
      - '^test:'
<%= if (brew) { %>
brews:
  -
      github:
        owner: gobuffalo
        name: homebrew-tap
<% } %>
